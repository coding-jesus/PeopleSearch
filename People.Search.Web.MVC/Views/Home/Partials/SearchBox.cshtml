<section id="Search-Box">
    <div class="container">
        <h1 class="text-center">
            <i class="fa fa-user-circle margin-ex-right"></i>
            <strong>People Search Application</strong>
        </h1>

        <hr class="colored-line" />

        <h2 class="text-center">Find people in your contact list.</h2>

        <form id="Search-Form" method="post">
            <div class="input-group">
                <input id="Search-Input" type="text" class="form-control input-lg" autofocus="" placeholder="Start Typing..." required="" />
                <span id="Search-Spinner" class="input-group-addon hidden">
                    <i class="fa fa-spinner fa-2x fa-spin"></i>
                </span>
                <span class="input-group-btn">
                    <button class="btn btn-default btn-lg" type="submit">
                        <i class="fa fa-search margin-ex-right"></i>
                        <span>Search</span>
                    </button>
                </span>
            </div>
        </form>

        <div id="Search-Result-Container" class="row hidden"></div>
    </div>
</section>